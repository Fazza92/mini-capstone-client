<%= form_tag "/client/products/#{ @product['id'] }", method: :patch do %>
  <div>
    Title: <input type="text" name="title" value="<%= @product['title'] %>">
  </div>
  <div>
    Name: <input type="text" name="name" value="<%= @product['name'] %>">
  </div>
  <div>
    Image URL: <input type="text" name="img_url" value="<%= @product['img_url'] %>">
  </div>
  <div>
    Description: <input type="text" name="description" value="<%= @product['description'] %>">
  </div>
  <input type="submit" value="Update Recipe">
<% end %>